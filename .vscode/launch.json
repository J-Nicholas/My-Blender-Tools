{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",  // folder containing tests
                        "--rootdir=${workspaceFolder}",  // crucial
                "-s"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
        }
    ],
        "cwd": "${workspaceFolder}",
    "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
    }
}
